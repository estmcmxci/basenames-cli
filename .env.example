# Basenames CLI Environment Variables
# Copy this file to .env.local and fill in your values

# Private key for signing transactions (required for register/edit commands)
# Never commit this file or share your private key!
export BASENAMES_PRIVATE_KEY="0x..."

# Network-specific RPC URLs (recommended)
# These will be used when you specify the network with -n flag
export BASE_RPC_URL_BASE="https://base.drpc.org"
export BASE_RPC_URL_BASESEPOLIA="https://base-sepolia.drpc.org"

# Generic RPC URL (fallback - used if network-specific URL not set)
# This will be used for the default network (baseSepolia)
# export BASE_RPC_URL="https://sepolia.base.org"

# Default network to use (baseSepolia or base)
# export BASENAMES_NETWORK="baseSepolia"
